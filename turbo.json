{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "biome:check": {
      "dependsOn": ["^biome:check"]
    },
    "biome:format": {
      "dependsOn": ["^biome:format"]
    },
    "biome:fix": {
      "dependsOn": ["^biome:fix"]
    }
  }
} 