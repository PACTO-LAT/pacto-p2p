{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/utils/*": ["./utils/*"],
      "@/store/*": ["./store/*"],
      "@/providers/*": ["./providers/*"],
      "@pacto-p2p/shared": ["../../packages/shared/src"],
      "@pacto-p2p/ui": ["../../packages/ui/src"],
      "@pacto-p2p/types": ["../../packages/types/src"],
      "@pacto-p2p/config": ["../../packages/config/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
} 